\begin_layout Subsubsection*
\begin_inset Formula 
\begin{align*}
 & v\vDash\text{EXEC}\wedge\neg(D_{1}\wedge D_{2})\\
 & \wedge(G_{1}\wedge G_{2})\\
 & \Rightarrow\overline{v}(G_{1})=T\ \ \ \overline{v}(G_{2})=T\\
 & \Rightarrow\overline{v}(R_{1}\wedge(\neg R_{2}\vee D_{2}))=T\\
 & \Rightarrow\overline{v}(R_{1})+T\\
 & *\overline{v}(\neg R_{2}\vee D_{2})=T\\
 & \overline{v}(G_{2})=T\Rightarrow\overline{v}(R_{2})=T\\
 & **\overline{v}(\neg R_{2})=F\\
 & \underbrace{\Rightarrow}_{*+**}\overline{v}(D_{2})=T
\end{align*}

\end_inset


